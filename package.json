{
  "name": "rehype-mermaid-lite",
  "version": "1.1.0",
  "description": "A lightweight rehype plugin that transforms mermaid code blocks into <pre class=\"mermaid\"> for client-side rendering.",
  "keywords": [
    "rehype",
    "mermaid",
    "unified",
    "markdown",
    "astro",
    "remark"
  ],
  "author": "Chiahong Hong",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChiahongHong/rehype-mermaid-lite.git"
  },
  "bugs": {
    "url": "https://github.com/ChiahongHong/rehype-mermaid-lite/issues"
  },
  "homepage": "https://github.com/ChiahongHong/rehype-mermaid-lite#readme",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@types/hast": "^3.0.0",
    "@types/unist": "^3.0.0",
    "@vitest/coverage-v8": "^4.0.0",
    "prettier": "^3.0.0",
    "rehype-stringify": "^10.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.0.0",
    "typescript": "^5.0.0",
    "unified": "^11.0.0",
    "vitest": "^4.0.0"
  }
}
