{
  "name": "rehype-mermaid-lite",
  "version": "1.0.0",
  "description": "A lightweight rehype plugin that transforms mermaid code blocks into <pre class=\"mermaid\"> for client-side rendering.",
  "keywords": [
    "rehype",
    "mermaid",
    "unified",
    "markdown",
    "astro",
    "remark"
  ],
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "format": "prettier --write .",
    "test": "vitest run",
    "dev:test": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@types/hast": "^3.0.0",
    "@types/unist": "^3.0.0",
    "prettier": "^3.0.0",
    "rehype-stringify": "^10.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.0.0",
    "typescript": "^5.0.0",
    "unified": "^11.0.0",
    "vitest": "^4.0.0"
  }
}
